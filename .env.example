# ==========================================
# API Gateway Configuration
# ==========================================

# Database Configuration
DATABASE_URL=sqlite:///./data/lmapi.db

# Logging
LOG_LEVEL=INFO

# Cloudflare Tunnel URL (Public access point)
CLOUDFLARE_TUNNEL_URL=https://lmapi.laserpointlabs.com

# ==========================================
# AI Model Configuration
# ==========================================

# Ollama Base URL (Internal or External)
OLLAMA_BASE_URL=http://ollama:11434

# Maximum number of models to keep loaded in memory
# Recommendation: 4-6 for GPU, 2-3 for CPU
OLLAMA_MAX_LOADED_MODELS=6

# Keep models loaded indefinitely (-1) or set timeout (e.g. "5m")
OLLAMA_KEEP_ALIVE=-1

# Models to preload on startup (comma-separated)
OLLAMA_PRELOAD_MODELS="granite4:3b,qwen2.5:32b"

# Default model for Frontend Chat
BET_DEFAULT_MODEL=gpt-4o

# OpenAI API Key (Required for 'gpt-4o')
OPENAI_API_KEY=sk-proj-your-key-here

# ==========================================
# Betting Data & Monitoring
# ==========================================

# The Odds API Key (https://the-odds-api.com/)
# Required for Live Odds, Player Props, and Historical Data
ODDS_API_KEY=your_odds_api_key

# Alert Time-To-Live (Minutes)
# How long an alert stays in the list before being auto-cleared.
# Recommended: 60
ALERT_TTL_MINUTES=60

# Prop Check Interval (Minutes)
# How often to scan player props for movement.
# Normal: 15 | Game Time: 5 | Off-season: 60
# Note: You might need to delete 'mcp_servers/betting_monitor/data/opening_props.json' 
# to force a fresh snapshot immediately after changing this, or wait for the next cycle.
PROP_CHECK_INTERVAL=15

# ==========================================
# Email & Testing
# ==========================================

# Gmail credentials for sending API keys
GMAIL_USER=your-email@gmail.com
GMAIL_PASSWORD=your-app-password

# System Test Key (Optional)
# A valid Customer API Key (sk_...) used for running 'python tests/system_health_check.py'
SYSTEM_TEST_KEY=sk_...
