# Database Configuration
DATABASE_URL=sqlite:///./data/lmapi.db

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434

# External API Keys (optional, for pass-through)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Logging
LOG_LEVEL=INFO

# Cloudflare Tunnel Configuration
CLOUDFLARE_TUNNEL_URL=https://lmapi.laserpointlabs.com

# Ollama Models to Auto-Pull on Startup
# Space-separated list of models to automatically pull when Ollama starts
# Example: OLLAMA_MODELS="llama3.2:1b mistral codellama"
OLLAMA_MODELS=llama3.2:1b mistral codellama
